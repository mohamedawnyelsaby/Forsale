{
  "name": "forsale",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered global marketplace on Pi Network",
  "author": "Forsale Team",
  "license": "PROPRIETARY",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "postinstall": "pnpm db:generate",
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=web",
    "dev:api": "turbo run dev --filter=api",
    "build": "npx turbo run build --continue",
    "build:web": "pnpm db:generate && turbo run build --filter=web",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "prisma generate --schema=./packages/database/prisma/schema.prisma",
    "db:push": "cd packages/database && prisma db push",
    "db:studio": "cd packages/database && prisma studio"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  }
}
