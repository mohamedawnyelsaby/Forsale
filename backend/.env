NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/forsale_db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-min-32-chars
JWT_REFRESH_EXPIRE=30d

# Pi Network
PI_APP_ID=your-pi-app-id
PI_API_KEY=your-pi-api-key
PI_APP_SECRET=your-pi-app-secret
PI_CALLBACK_BASE=https://your-domain.com

# CORS
CORS_ORIGIN=https://your-frontend-domain.com

# S3 / DigitalOcean Spaces
S3_ENDPOINT=https://nyc3.digitaloceanspaces.com
S3_BUCKET=forsale-uploads
S3_KEY=your-s3-access-key
S3_SECRET=your-s3-secret-key

# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Logging
LOG_LEVEL=info
