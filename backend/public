    <script>
        // ========================================
        // I18N & LOGIC
        // ========================================
        const translations = {
            en: {
                welcome_back: "Welcome Back", email_address: "Email address", password: "Password", sign_in: "Sign In",
                home: "Home", wallet: "Wallet", orders: "Orders", settings: "Settings", search_placeholder: "Search with AI...",
                hot_deals: "Hot Deals", see_all: "See All", verified_seller: "Verified Seller", buy_now: "Buy Now", language: "Language"
            },
            ar: {
                welcome_back: "Ù…Ø±Ø­Ø¨Ø§Ù‹ Ø¨Ø¹ÙˆØ¯ØªÙƒ", email_address: "Ø§Ù„Ø¨Ø±ÙŠØ¯ Ø§Ù„Ø¥Ù„ÙƒØªØ±ÙˆÙ†ÙŠ", password: "ÙƒÙ„Ù…Ø© Ø§Ù„Ù…Ø±ÙˆØ±", sign_in: "ØªØ³Ø¬ÙŠÙ„ Ø§Ù„Ø¯Ø®ÙˆÙ„",
                home: "Ø§Ù„Ø±Ø¦ÙŠØ³ÙŠØ©", wallet: "Ø§Ù„Ù…Ø­ÙØ¸Ø©", orders: "Ø§Ù„Ø·Ù„Ø¨Ø§Øª", settings: "Ø§Ù„Ø¥Ø¹Ø¯Ø§Ø¯Ø§Øª", search_placeholder: "Ø§Ø¨Ø­Ø« Ø¨Ø§Ù„Ø°ÙƒØ§Ø¡ Ø§Ù„Ø§ØµØ·Ù†Ø§Ø¹ÙŠ...",
                hot_deals: "Ø¹Ø±ÙˆØ¶ Ù…Ù…ÙŠØ²Ø©", see_all: "Ø¹Ø±Ø¶ Ø§Ù„ÙƒÙ„", verified_seller: "Ø¨Ø§Ø¦Ø¹ Ù…ÙˆØ«Ù‚", buy_now: "Ø§Ø´ØªØ±Ù Ø§Ù„Ø¢Ù†", language: "Ø§Ù„Ù„ØºØ©"
            },
            es: { welcome_back: "Bienvenido", sign_in: "Entrar", home: "Inicio", settings: "Ajustes", hot_deals: "Ofertas", buy_now: "Comprar", verified_seller: "Verificado", language: "Idioma" },
            fr: { welcome_back: "Bienvenue", sign_in: "Entrer", home: "Accueil", settings: "ParamÃ¨tres", hot_deals: "Offres", buy_now: "Acheter", verified_seller: "VÃ©rifiÃ©", language: "Langue" }
        };

        let currentLanguage = 'en';

        function changeLanguage(langCode) {
            currentLanguage = langCode;
            localStorage.setItem('forsale_language', langCode);
            document.documentElement.lang = langCode;
            document.documentElement.dir = (langCode === 'ar') ? 'rtl' : 'ltr';
            
            document.querySelectorAll('[data-i18n]').forEach(el => {
                const key = el.getAttribute('data-i18n');
                const text = translations[langCode][key] || translations['en'][key];
                if (el.tagName === 'INPUT') el.placeholder = text;
                else el.textContent = text;
            });
            renderProducts();
        }

        window.i18n = { changeLanguage };

        // MOCK DATA & RENDER
        const MOCK_PRODUCTS = [
            { id: 1, name: 'iPhone 15 Pro Max', price: 0.5, img: 'https://images.unsplash.com/photo-1696446701796-da61225697cc?w=400', verified: true },
            { id: 2, name: 'MacBook Pro M3', price: 1.2, img: 'https://images.unsplash.com/photo-1517336714731-489689fd1ca8?w=400', verified: true },
            { id: 3, name: 'Sony PS5', price: 0.3, img: 'https://images.unsplash.com/photo-1606813907291-d86efa9b94db?w=400', verified: false }
        ];

        function renderProducts() {
            const t = translations[currentLanguage];
            const grid = document.getElementById('products-grid');
            grid.innerHTML = MOCK_PRODUCTS.map(p => `
                <div class="product-card">
                    <div class="product-image-container">
                        <img src="${p.img}" class="product-image">
                        ${p.verified ? `<div class="product-badge badge-verified"><i class="fa-solid fa-check"></i> ${t.verified_seller || 'Verified'}</div>` : ''}
                    </div>
                    <div class="product-info">
                        <div style="font-weight:bold;">${p.name}</div>
                        <div class="price">${p.price} Pi</div>
                        <button class="btn-primary" style="margin-top:10px; font-size:12px; padding:8px;">${t.buy_now || 'Buy Now'}</button>
                    </div>
                </div>
            `).join('');
        }

        // NAVIGATION
        function showApp() { 
            document.getElementById('auth-container').style.display = 'none';
            document.getElementById('app-container').style.display = 'block';
        }
        function logout() { location.reload(); }
        function openSettings() { document.getElementById('settingsModal').style.display = 'flex'; }
        function closeSettings() { document.getElementById('settingsModal').style.display = 'none'; }
        function openOrders() { alert("Orders Page"); }
        function openWallet() { alert("Wallet Page"); }

        // INIT
        document.addEventListener('DOMContentLoaded', () => {
            const saved = localStorage.getItem('forsale_language') || 'en';
            document.getElementById('language-selector').value = saved;
            changeLanguage(saved);
            document.getElementById('login-btn').addEventListener('click', showApp);
        });
    </script>
