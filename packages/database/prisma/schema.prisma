// This is your Prisma schema file for SQLite development

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  category    String
  image       String?
  sellerId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Transaction {
  id              String   @id @default(cuid())
  paymentId       String   @unique
  amount          Float
  commission      Float    
  status          String   @default("PENDING")
  buyerId         String
  sellerId        String
  shippingStatus  String   @default("NOT_SHIPPED")
  createdAt       DateTime @default(now())
}
